# ===============================================
# MsmeBazaar v2.0 - Microservices Environment Template
# ===============================================

# ===============================================
# SHARED INFRASTRUCTURE
# ===============================================

# Database Configuration (Shared across all services)
DATABASE_URL=postgresql://msmebazaar_user:password@host:port/msmebazaar_production
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (Shared caching layer)
REDIS_URL=redis://host:port/0
REDIS_PASSWORD=your-redis-password

# ===============================================
# SECURITY & AUTHENTICATION
# ===============================================

# JWT & Authentication
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
SECRET_KEY=your-super-secret-key-minimum-32-characters
NEXTAUTH_SECRET=your-nextauth-secret-for-sessions
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# Admin Access
ADMIN_SECRET=your-admin-secret-key

# ===============================================
# MICROSERVICES INTER-COMMUNICATION
# ===============================================

# Service URLs (Internal Communication)
AUTH_SERVICE_URL=https://msmebazaar-auth.onrender.com
RECOMMENDATION_SERVICE_URL=https://msmebazaar-recommendations.onrender.com
ML_MONITORING_SERVICE_URL=https://msmebazaar-ml-monitoring.onrender.com
TRANSACTION_MATCHING_SERVICE_URL=https://msmebazaar-transactions.onrender.com
GAMIFICATION_SERVICE_URL=https://msmebazaar-gamification.onrender.com
USER_PROFILE_SERVICE_URL=https://msmebazaar-profiles.onrender.com
VALUATION_SERVICE_URL=https://msmebazaar-valuation.onrender.com
MSME_LISTING_SERVICE_URL=https://msmebazaar-listings.onrender.com
SEARCH_SERVICE_URL=https://msmebazaar-search.onrender.com
PAYMENTS_API_URL=https://msmebazaar-payments.onrender.com
ML_API_URL=https://msmebazaar-ml-api.onrender.com
EAAS_SERVICE_URL=https://msmebazaar-eaas.onrender.com
ADMIN_API_URL=https://admin-api.vyapaarmitra.in

# ===============================================
# AI & ML SERVICES
# ===============================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp-free
PINECONE_INDEX_NAME=msmebazaar-vectors

# MLflow Tracking
MLFLOW_TRACKING_URI=https://msmebazaar-mlflow.onrender.com

# ML Model Paths
ML_MODEL_PATH=/opt/render/project/src/models
ML_DATA_PATH=/opt/render/project/src/data

# ===============================================
# PAYMENT INTEGRATIONS
# ===============================================

# Razorpay (Primary Payment Gateway)
RAZORPAY_KEY_ID=rzp_live_your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Stripe (Secondary Payment Gateway)
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# ===============================================
# EMAIL & COMMUNICATION SERVICES
# ===============================================

# SMTP Configuration (for EaaS Service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-business-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@vyapaarmitra.in
SMTP_FROM_NAME=MsmeBazaar

# WhatsApp Business API (Optional)
WHATSAPP_TOKEN=your-whatsapp-business-token
WHATSAPP_PHONE_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# SMS Configuration (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===============================================
# SEARCH & DATA SERVICES
# ===============================================

# Elasticsearch (for Search Service)
ELASTICSEARCH_URL=https://your-elasticsearch-cluster.com
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# ===============================================
# MONITORING & ANALYTICS
# ===============================================

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn-for-error-tracking
SENTRY_ENVIRONMENT=production

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Prometheus Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# ===============================================
# CLOUD STORAGE & CDN
# ===============================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=msmebazaar-uploads

# Cloudinary (Alternative)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===============================================
# APPLICATION SETTINGS
# ===============================================

# Environment Settings
NODE_ENV=production
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# CORS Configuration
CORS_ORIGINS=https://vyapaarmitra.in,https://www.vyapaarmitra.in,https://app.vyapaarmitra.in,https://api.vyapaarmitra.in,https://auth.vyapaarmitra.in
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Session Configuration
SESSION_TIMEOUT=86400
REFRESH_TOKEN_EXPIRY=604800

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ===============================================
# FRONTEND CONFIGURATION
# ===============================================

# React App Environment Variables
REACT_APP_API_URL=https://api.vyapaarmitra.in
REACT_APP_AUTH_URL=https://auth.vyapaarmitra.in
REACT_APP_ENVIRONMENT=production

# Vite Environment Variables
VITE_API_URL=https://api.vyapaarmitra.in/api
VITE_AUTH_API_URL=https://auth.vyapaarmitra.in
VITE_WS_URL=wss://api.vyapaarmitra.in/ws

# ===============================================
# SCHEDULER & BACKGROUND JOBS
# ===============================================

# Scheduler Configuration
SCHEDULER_INTERVAL=300000  # 5 minutes in milliseconds
CRON_ENABLED=true

# Background Job Settings
JOB_CONCURRENCY=2
JOB_TIMEOUT=300000

# ===============================================
# LOCALIZATION & REGIONAL SETTINGS
# ===============================================

# Language Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,or
DEFAULT_TIMEZONE=Asia/Kolkata

# Regional Settings
DEFAULT_CURRENCY=INR
DEFAULT_COUNTRY=IN

# ===============================================
# FEATURE FLAGS
# ===============================================

# Development Features
ENABLE_DEVELOPMENT_TOOLS=false
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SWAGGER_UI=true

# Production Features
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_SSL_REDIRECT=true

# Service Features
ENABLE_AI_FEATURES=true
ENABLE_GAMIFICATION=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ADVANCED_ANALYTICS=true

# ===============================================
# HEALTH CHECK & MONITORING ENDPOINTS
# ===============================================

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_RETRIES=3

# Service Discovery
SERVICE_REGISTRY_URL=https://api.vyapaarmitra.in/services
SERVICE_DISCOVERY_ENABLED=true