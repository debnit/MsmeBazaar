# MSMESquare Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/msme_square
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=msme_square

# Redis Configuration (for session storage and caching)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-secure-jwt-secret-here-minimum-32-characters
SESSION_SECRET=your-secure-session-secret-here-minimum-32-characters

# SMS Service (MSG91)
MSG91_AUTH_KEY=your-msg91-api-key-here

# Application Configuration
NODE_ENV=development
PORT=5000

# Frontend Configuration
VITE_API_URL=http://localhost:5000

# Deployment Configuration
RENDER_SERVICE_ID=your-render-service-id
RENDER_API_KEY=your-render-api-key
RAILWAY_TOKEN=your-railway-token

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
CORS_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Email Configuration (Optional)
EMAIL_FROM=noreply@msmesquare.com
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Cron Job Configuration
ENABLE_SCHEDULER=true
SCHEDULER_TIMEZONE=Asia/Kolkata

# Development Configuration
DEBUG=true
LOG_QUERIES=false
ENABLE_SWAGGER=true