# ===== MSMEBazaar V2 Environment Variables =====
# Copy this file to .env and fill in your actual values
# For production, set these in Render dashboard

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://username:password@localhost:5432/msmebazaar_v2
REDIS_URL=redis://localhost:6379/0

# PostgreSQL specific (for local development)
POSTGRES_DB=msmebazaar_v2
POSTGRES_USER=msmebazaar
POSTGRES_PASSWORD=your_postgres_password

# ===== JWT & AUTHENTICATION =====
SECRET_KEY=your-super-secret-jwt-key-here-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== API ENDPOINTS (Auto-populated in Render) =====
VITE_API_BASE_URL=http://localhost:8000
VITE_AUTH_API_URL=http://localhost:8000
VITE_MSME_API_URL=http://localhost:8001
VITE_ADMIN_API_URL=http://localhost:8002
VITE_PAYMENTS_API_URL=http://localhost:8003
VITE_WHATSAPP_BOT_URL=http://localhost:8004

# For backend inter-service communication
AUTH_API_URL=http://localhost:8000
MSME_API_URL=http://localhost:8001
ADMIN_API_URL=http://localhost:8002
PAYMENTS_API_URL=http://localhost:8003
WHATSAPP_BOT_URL=http://localhost:8004

# ===== STRIPE PAYMENTS =====
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ===== RAZORPAY (Alternative Payment) =====
RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# ===== COMMUNICATION SERVICES =====
# Twilio (WhatsApp & SMS)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
WHATSAPP_PHONE_NUMBER=+1234567890

# SendGrid (Email)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@msmebazaar.com

# ===== EXTERNAL APIS =====
# OpenAI (AI Features)
OPENAI_API_KEY=sk-your_openai_api_key

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=msmebazaar-documents

# ===== MONITORING & ANALYTICS =====
# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
VITE_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ===== APPLICATION SETTINGS =====
# Environment
ENVIRONMENT=development
NODE_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# App Configuration
VITE_APP_NAME=MSMEBazaar V2
VITE_APP_VERSION=2.0.0
VITE_APP_URL=http://localhost:3000

# ===== FEATURE FLAGS =====
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true

# ===== BUILD CONFIGURATION =====
VITE_BUILD_MODE=development
PORT=3000

# ===== SECURITY SETTINGS =====
# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ===== WEBHOOK ENDPOINTS =====
# These will be auto-generated by Render services
STRIPE_WEBHOOK_URL=https://your-payments-api.onrender.com/webhooks/stripe
TWILIO_WEBHOOK_URL=https://your-whatsapp-bot.onrender.com/webhooks/twilio

# ===== LOCAL DEVELOPMENT ONLY =====
# Database connection for local PostgreSQL
LOCAL_DATABASE_URL=postgresql://msmebazaar:password@localhost:5432/msmebazaar_v2
LOCAL_REDIS_URL=redis://localhost:6379/0

# ===== RENDER SPECIFIC =====
# These are automatically set by Render - DO NOT SET MANUALLY
# RENDER=true
# RENDER_SERVICE_NAME=your-service-name
# RENDER_EXTERNAL_URL=https://your-service.onrender.com
# RENDER_INTERNAL_HOSTNAME=your-service
# RENDER_SERVICE_ID=srv-xxxxxxxxxxxxxxxxxxxx

# ===== DOCKER COMPOSE OVERRIDES =====
# For docker-compose.yml
POSTGRES_PORT=5432
REDIS_PORT=6379
FRONTEND_PORT=3000
AUTH_API_PORT=8000
MSME_API_PORT=8001
ADMIN_API_PORT=8002
PAYMENTS_API_PORT=8003
WHATSAPP_BOT_PORT=8004