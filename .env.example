# =================================================================
# MSMEBazaar v3 Environment Configuration
# =================================================================

# =================================================================
# APPLICATION CONFIGURATION
# =================================================================
NODE_ENV=development
APP_NAME="MSMEBazaar"
APP_VERSION="3.0.0"
APP_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000
PORT=3000
HOST=0.0.0.0

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# PostgreSQL Primary Database
DATABASE_URL=postgresql://username:password@localhost:5432/msmebazaar
DB_HOST=localhost
DB_PORT=5432
DB_NAME=msmebazaar
DB_USER=username
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Database Connection Pool
DB_CONNECTION_TIMEOUT=60000
DB_IDLE_TIMEOUT=600000
DB_POOL_TIMEOUT=30000

# Database Migrations
RUN_MIGRATIONS=true
MIGRATION_TABLE_NAME=knex_migrations

# =================================================================
# REDIS CONFIGURATION
# =================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=msmebazaar:

# Redis Cluster (if using cluster)
REDIS_CLUSTER_NODES=
REDIS_CLUSTER_PASSWORD=

# =================================================================
# AUTHENTICATION & SECURITY
# =================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-too
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_ISSUER=msmebazaar
JWT_AUDIENCE=msmebazaar-users

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_SALT_ROUNDS=12
PASSWORD_RESET_EXPIRY=3600000

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Security Headers
HELMET_CSP_ENABLED=true
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# =================================================================
# API KEYS & INTEGRATIONS
# =================================================================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STORE=redis

# Public API Keys
VALID_API_KEYS=api_key_1,api_key_2,api_key_3

# =================================================================
# EMAIL CONFIGURATION
# =================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Templates
FROM_EMAIL=noreply@msmebazaar.com
FROM_NAME="MSMEBazaar Team"
REPLY_TO_EMAIL=support@msmebazaar.com

# SendGrid (Alternative)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@msmebazaar.com

# =================================================================
# SMS & OTP CONFIGURATION
# =================================================================
# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY=300000
OTP_MAX_ATTEMPTS=3

# =================================================================
# FILE STORAGE CONFIGURATION
# =================================================================
# Local Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=msmebazaar-documents
AWS_S3_URL=https://s3.amazonaws.com
AWS_CLOUDFRONT_URL=https://d1234567890.cloudfront.net

# Azure Blob Storage (Alternative)
AZURE_STORAGE_ACCOUNT=yourstorageaccount
AZURE_STORAGE_KEY=your-storage-key
AZURE_STORAGE_CONTAINER=documents

# =================================================================
# PAYMENT GATEWAY CONFIGURATION
# =================================================================
# Razorpay Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret

# Stripe Configuration (Alternative)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal Configuration (Alternative)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# =================================================================
# THIRD-PARTY SERVICES
# =================================================================
# Google Services
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY_ID=your-firebase-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@firebase.com
FIREBASE_CLIENT_ID=your-firebase-client-id

# Social Media APIs
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# =================================================================
# AI & ML SERVICES
# =================================================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX_NAME=msmebazaar-embeddings

# Anthropic Claude (Alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# =================================================================
# MONITORING & ANALYTICS
# =================================================================
# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# New Relic APM
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=MSMEBazaar-v3

# DataDog APM
DD_API_KEY=your-datadog-api-key
DD_APP_KEY=your-datadog-app-key
DD_SITE=datadoghq.com

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# =================================================================
# LOGGING CONFIGURATION
# =================================================================
# Log Levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Log Rotation
LOG_ROTATE=true
LOG_DATE_PATTERN=YYYY-MM-DD

# External Logging
PAPERTRAIL_HOST=logs.papertrailapp.com
PAPERTRAIL_PORT=12345
LOGGLY_TOKEN=your-loggly-token
LOGGLY_SUBDOMAIN=your-subdomain

# =================================================================
# CACHE CONFIGURATION
# =================================================================
# Redis Cache
CACHE_TTL=3600
CACHE_MAX_ENTRIES=1000
CACHE_CHECK_PERIOD=600

# Memory Cache (Alternative)
MEMORY_CACHE_MAX=1000
MEMORY_CACHE_TTL=600

# =================================================================
# SEARCH CONFIGURATION
# =================================================================
# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=msmebazaar
ELASTICSEARCH_LOG_LEVEL=error

# Algolia Search (Alternative)
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_API_KEY=your-algolia-api-key
ALGOLIA_SEARCH_KEY=your-algolia-search-key
ALGOLIA_INDEX_NAME=msmebazaar_search

# =================================================================
# COMMUNICATION SERVICES
# =================================================================
# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#notifications
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-teams-webhook

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-discord-webhook

# =================================================================
# BACKUP & DISASTER RECOVERY
# =================================================================
# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=msmebazaar-backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# =================================================================
# COMPLIANCE & LEGAL
# =================================================================
# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555
COOKIE_CONSENT_REQUIRED=true

# Terms & Privacy
TERMS_VERSION=1.0
PRIVACY_VERSION=1.0
COOKIE_POLICY_VERSION=1.0

# =================================================================
# FEATURE FLAGS
# =================================================================
# Application Features
FEATURE_REGISTRATION=true
FEATURE_VALUATION=true
FEATURE_LOANS=true
FEATURE_CHAT=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
FEATURE_AI_MATCHING=true
FEATURE_MOBILE_APP=false

# Payment Features
FEATURE_RAZORPAY=true
FEATURE_STRIPE=false
FEATURE_PAYPAL=false

# Experimental Features
FEATURE_ADVANCED_SEARCH=true
FEATURE_VIDEO_CALLS=false
FEATURE_BLOCKCHAIN=false

# =================================================================
# DEVELOPMENT & TESTING
# =================================================================
# Development Settings
DEBUG=true
VERBOSE_LOGGING=false
HOT_RELOAD=true
SOURCE_MAPS=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/msmebazaar_test
TEST_REDIS_URL=redis://localhost:6379/1
MOCK_EXTERNAL_APIS=true
SKIP_EMAIL_VERIFICATION=true
SKIP_SMS_VERIFICATION=true

# Seeding
SEED_DATABASE=false
SEED_ADMIN_EMAIL=admin@msmebazaar.com
SEED_ADMIN_PASSWORD=AdminPassword123!

# =================================================================
# PERFORMANCE OPTIMIZATION
# =================================================================
# Caching
ENABLE_RESPONSE_CACHING=true
RESPONSE_CACHE_TTL=300
ENABLE_STATIC_CACHING=true

# Compression
ENABLE_GZIP=true
COMPRESSION_THRESHOLD=1024
COMPRESSION_LEVEL=6

# Rate Limiting per Feature
AUTH_RATE_LIMIT_MAX=5
API_RATE_LIMIT_MAX=100
SEARCH_RATE_LIMIT_MAX=30
UPLOAD_RATE_LIMIT_MAX=10

# =================================================================
# DEPLOYMENT CONFIGURATION
# =================================================================
# Environment
DEPLOY_ENVIRONMENT=development
DEPLOY_VERSION=3.0.0
BUILD_NUMBER=
DEPLOY_TIMESTAMP=

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
READINESS_CHECK_PATH=/ready

# Graceful Shutdown
GRACEFUL_SHUTDOWN_TIMEOUT=30000
FORCE_SHUTDOWN_TIMEOUT=5000

# =================================================================
# MICROSERVICES CONFIGURATION
# =================================================================
# Service Discovery
SERVICE_REGISTRY_URL=http://localhost:8500
SERVICE_NAME=msmebazaar-api
SERVICE_PORT=8000
SERVICE_HOST=localhost

# Inter-service Communication
AUTH_SERVICE_URL=http://localhost:8001
VALUATION_SERVICE_URL=http://localhost:8002
NOTIFICATION_SERVICE_URL=http://localhost:8003
ML_SERVICE_URL=http://localhost:8004

# Message Queue
RABBITMQ_URL=amqp://localhost:5672
QUEUE_PREFIX=msmebazaar
QUEUE_DURABLE=true

# =================================================================
# CONTAINER & ORCHESTRATION
# =================================================================
# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_TAG=latest
DOCKER_NETWORK=msmebazaar-network

# Kubernetes
K8S_NAMESPACE=msmebazaar
K8S_CLUSTER_NAME=msmebazaar-cluster
K8S_SERVICE_ACCOUNT=msmebazaar-sa

# =================================================================
# SECURITY SCANNING & COMPLIANCE
# =================================================================
# Security Tools
SNYK_TOKEN=your-snyk-token
SEMGREP_APP_TOKEN=your-semgrep-token
CODECOV_TOKEN=your-codecov-token

# Vulnerability Scanning
TRIVY_ENABLED=true
CLAIR_SCANNER_ENABLED=false

# Compliance
SOC2_COMPLIANCE=false
ISO27001_COMPLIANCE=false
HIPAA_COMPLIANCE=false