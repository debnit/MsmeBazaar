# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/msmeatlas
PGDATABASE=msmeatlas
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Application Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# External Services (Optional)
# Add your API keys for external services here
# SMS_API_KEY=your-sms-api-key
# EMAIL_API_KEY=your-email-api-key
# DOCUMENT_API_KEY=your-document-generation-api-key

# RBI Compliance
# NBFC_LICENSE_NUMBER=your-nbfc-license-number
# RBI_REPORTING_ENDPOINT=https://rbi.org.in/api/reporting

# File Upload Configuration
# MAX_FILE_SIZE=10485760  # 10MB in bytes
# ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Security Configuration
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
# RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
# RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
# LOG_LEVEL=info
# LOG_FILE=./logs/app.log

# Development Tools
# Enable detailed error messages in development
DEBUG=true
VERBOSE_LOGGING=true

# Production Overrides
# In production, ensure these are set properly:
# NODE_ENV=production
# DEBUG=false
# VERBOSE_LOGGING=false
