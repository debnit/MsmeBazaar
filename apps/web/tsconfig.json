{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".", // resolves @/* relative to apps/web/
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
