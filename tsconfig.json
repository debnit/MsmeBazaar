{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      // NEW: Updated to match `apps/web` structure
      "@/*": ["apps/web/*"],
      "@/app/*": ["apps/web/app/*"],
      "@/components/*": ["apps/web/components/*"],
      "@/lib/*": ["apps/web/lib/*"],
      "@/hooks/*": ["apps/web/hooks/*"],
      "@/utils/*": ["apps/web/utils/*"],

      // SHARED
      "@shared/*": ["shared/*"],
      "@/shared/*": ["shared/*"],

      // OPTIONAL: still support legacy `client/` if needed temporarily
      "@client/*": ["client/src/*"]
    }
  },
  "include": [
    "apps/web/**/*",
    "shared/**/*",
    "client/src/types/**/*",
    "client/src/vite-env.d.ts",
    "client/src/sw.ts",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "shared/schema.ts",
    "server/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "apps/web" }
    // You can add other packages (e.g. apps/api) as needed
  ]
}
