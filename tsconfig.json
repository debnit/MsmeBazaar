{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/web/*"],
      "@/components/*": ["apps/web/components/*"],
      "@/app/*": ["apps/web/app/*"],
      "@/lib/*": ["apps/web/lib/*"],
      "@/hooks/*": ["apps/web/hooks/*"],
      "@/utils/*": ["apps/web/utils/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "apps/web",
    "shared",
    "client/src/types",
    "client/src/vite-env.d.ts",
    "client/src/sw.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "server",
    "apps/api",
    "ml",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "apps/web" }
  ]
}
