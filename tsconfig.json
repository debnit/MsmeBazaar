{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@/components/*": ["client/src/components/*"],
      "@/pages/*": ["client/src/pages/*"],
      "@/lib/*": ["client/src/lib/*"],
      "@/hooks/*": ["client/src/hooks/*"],
      "@/utils/*": ["client/src/utils/*"],
      "@/shared/*": ["shared/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "client/src/**/*",
    "client/src/types/**/*",
    "client/src/vite-env.d.ts",
    "shared/**/*",
    "client/src/sw.ts",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "shared/schema.ts",
    "server/**/*.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
