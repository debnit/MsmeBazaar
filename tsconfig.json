{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/web/*"],
      "@/components/*": ["apps/web/components/*"],
      "@/app/*": ["apps/web/app/*"],
      "@/lib/*": ["apps/web/lib/*"],
      "@/hooks/*": ["apps/web/hooks/*"],
      "@/utils/*": ["apps/web/utils/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "apps/web",
    "shared",
    "client/src/types",
    "client/src/vite-env.d.ts",
    "client/src/sw.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "server",
    "apps/api",
    "ml",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "./apps/web" },
    { "path": "./apps/mobile" },
    { "path": "./libs/ui" },
    { "path": "./libs/auth" },
    { "path": "./libs/api" },
    { "path": "./libs/core" },
    { "path": "./libs/hooks" },
    { "path": "./libs/utils" },
    { "path": "./libs/db" },
    { "path": "./libs/shared" },
    { "path": "./libs/analytics-engine" }
  ]
}
