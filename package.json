{
  "name": "msmebazaar-v2",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*",
    "client"
  ],
  "scripts": {
    "dev": "pnpm --filter msmebazaar-client dev",
    "build": "pnpm --filter msmebazaar-client build",
    "preview": "pnpm --filter msmebazaar-client preview",
    "dev:api": "cd apps/auth-api && uvicorn main:app --reload --port 8000",
    "build:api": "echo 'Build API services...'",
    "clean": "rm -rf node_modules **/node_modules",
    "reset": "pnpm clean && pnpm install"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^5.4.19"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.83.0",
    "axios": "^1.11.0",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.294.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "wouter": "^3.7.1"
  }
}
