{
  "name": "msmebazaar-v2",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*",
    "client"
  ],
  "scripts": {
    "dev": "pnpm --filter msmebazaar-client dev",
    "build": "pnpm --filter msmebazaar-client build",
    "preview": "pnpm --filter msmebazaar-client preview",
    "dev:api": "cd apps/auth-api && uvicorn main:app --reload --port 8000",
    "build:api": "echo 'Build API services...'",
    "clean": "rm -rf node_modules **/node_modules",
    "reset": "pnpm clean && pnpm install"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^5.4.19"
  }
}
