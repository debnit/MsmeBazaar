{
  "name": "msmebazaar-v2",
  "version": "2.0.0",
  "private": true,
  "description": "A modular platform to onboard MSMEs and match them with buyers, investors, and acquisition opportunities",
  "workspaces": [
    "apps/*",
    "libs/*",
    "microservices/*"
  ],
  "packageManager": "npm@10.2.4",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "reset": "npm run clean && npm install",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "db:seed": "turbo run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "turbo run docker:build",
    "deploy": "turbo run deploy",
    "graph": "turbo run build --graph=dependency-graph.html",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build lint test && changeset publish",
    "dev:web": "turbo run dev --filter=@msmebazaar/web",
    "dev:mobile": "turbo run dev --filter=@msmebazaar/mobile",
    "dev:api": "turbo run dev --filter=@msmebazaar/auth-api",
    "build:web": "turbo run build --filter=@msmebazaar/web",
    "build:mobile": "turbo run build --filter=@msmebazaar/mobile",
    "test:web": "turbo run test --filter=@msmebazaar/web",
    "test:mobile": "turbo run test --filter=@msmebazaar/mobile",
    "lint:web": "turbo run lint --filter=@msmebazaar/web",
    "lint:mobile": "turbo run lint --filter=@msmebazaar/mobile"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "msme",
    "marketplace",
    "ai-matching",
    "valuation",
    "nextjs",
    "fastapi",
    "microservices",
    "monorepo",
    "turborepo"
  ],
  "author": "MSMEBazaar Team",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.23.6",
    "next": "^14.2.30",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
