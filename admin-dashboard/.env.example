# ===============================================
# MSMEBazaar Admin Dashboard - Environment Variables
# ===============================================

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://msmebazaar:dev_password@localhost:5432/msmebazaar_admin
POSTGRES_DB=msmebazaar_admin
POSTGRES_USER=msmebazaar
POSTGRES_PASSWORD=dev_password

# ===== REDIS CONFIGURATION =====
REDIS_URL=redis://:dev_redis_password@localhost:6379/0
REDIS_PASSWORD=dev_redis_password

# ===== AUTHENTICATION & SECURITY =====
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== STRIPE BILLING CONFIGURATION =====
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ===== EXTERNAL API INTEGRATIONS =====
# OpenAI for AI features
OPENAI_API_KEY=sk-your-openai-api-key

# Twilio for SMS/WhatsApp
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid for Email
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@msmebazaar.com
SENDGRID_FROM_NAME=MSMEBazaar Admin

# ===== AWS S3 CONFIGURATION =====
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=msmebazaar-admin-uploads

# ===== APPLICATION SETTINGS =====
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://localhost:3000,http://127.0.0.1:3000

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,*.render.com

# ===== FRONTEND CONFIGURATION =====
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=MSMEBazaar Admin Dashboard
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=development

# ===== MONITORING & ANALYTICS =====
# Sentry for Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ===== FEATURE FLAGS =====
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_BILLING=true
NEXT_PUBLIC_ENABLE_WORKFLOWS=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_DOCUMENT_PROCESSING=true

# ===== DEVELOPMENT TOOLS =====
# pgAdmin
PGADMIN_EMAIL=admin@msmebazaar.com
PGADMIN_PASSWORD=admin123

# Grafana
GRAFANA_PASSWORD=admin123

# ===== CELERY CONFIGURATION =====
CELERY_BROKER_URL=redis://:dev_redis_password@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:dev_redis_password@localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=Asia/Kolkata

# ===== WORKFLOW ENGINE =====
WORKFLOW_ENGINE=celery
WORKFLOW_DEFAULT_TIMEOUT=3600
WORKFLOW_MAX_RETRIES=3

# ===== FILE UPLOAD CONFIGURATION =====
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif
UPLOAD_PATH=./uploads

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds

# ===== PAGINATION =====
DEFAULT_PAGE_SIZE=25
MAX_PAGE_SIZE=100

# ===== TIMEZONE & LOCALIZATION =====
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_CURRENCY=INR
DEFAULT_LANGUAGE=en

# ===== NOTIFICATION SETTINGS =====
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true
WHATSAPP_NOTIFICATIONS_ENABLED=true
IN_APP_NOTIFICATIONS_ENABLED=true

# WhatsApp Business API
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_account_id
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# ===== BACKUP CONFIGURATION =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ===== PERFORMANCE SETTINGS =====
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
REDIS_POOL_SIZE=10

# ===== SECURITY SETTINGS =====
ENABLE_HTTPS_REDIRECT=false
SECURE_COOKIES=false
CSRF_PROTECTION=true
XSS_PROTECTION=true

# ===== DEVELOPMENT OVERRIDES =====
# Set to true to enable development features
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SWAGGER_UI=true
ENABLE_ADMIN_INTERFACE=true

# ===== TESTING =====
TEST_DATABASE_URL=postgresql://msmebazaar:dev_password@localhost:5432/msmebazaar_admin_test
TEST_REDIS_URL=redis://:dev_redis_password@localhost:6379/1

# ===== DOCKER COMPOSE OVERRIDES =====
# These are used by docker-compose.yml
COMPOSE_PROJECT_NAME=msmebazaar-admin
COMPOSE_PROFILES=development  # or production, monitoring, logging