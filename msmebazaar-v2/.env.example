# MSMEBazaar V2.0 Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/msmebazaar
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# TWILIO SMS CONFIGURATION
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
TWILIO_VERIFY_SERVICE_SID=your-twilio-verify-service-sid

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=2000

# =============================================================================
# AWS / MINIO CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET=msmebazaar-documents
S3_ENDPOINT_URL=http://localhost:9000
USE_S3=true

# =============================================================================
# RAZORPAY PAYMENT CONFIGURATION
# =============================================================================
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# =============================================================================
# WEAVIATE CONFIGURATION
# =============================================================================
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key
WEAVIATE_TIMEOUT=30

# =============================================================================
# ELASTICSEARCH CONFIGURATION
# =============================================================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_TIMEOUT=30

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# =============================================================================
# API URLS (Internal Communication)
# =============================================================================
AUTH_API_URL=http://auth-api:8001
MSME_API_URL=http://msme-api:8002
VALUATION_API_URL=http://valuation-api:8003
MATCH_API_URL=http://match-api:8004
ADMIN_API_URL=http://admin-api:8005

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_AUTH_API_URL=http://localhost:8001
NEXT_PUBLIC_MSME_API_URL=http://localhost:8002
NEXT_PUBLIC_VALUATION_API_URL=http://localhost:8003
NEXT_PUBLIC_MATCH_API_URL=http://localhost:8004
NEXT_PUBLIC_ADMIN_API_URL=http://localhost:8005
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@msmebazaar.com

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
PYTHON_ENV=development
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_CORS=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# NODE_ENV=production
# PYTHON_ENV=production
# DEBUG=false
# ENABLE_SWAGGER=false
# SSL_ENABLED=true
# DOMAIN=msmebazaar.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_MATCHING=true
ENABLE_VALUATION_SERVICE=true
ENABLE_PAYMENT_GATEWAY=true
ENABLE_DOCUMENT_VERIFICATION=true
ENABLE_ANALYTICS=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MAX_UPLOAD_SIZE=10485760
MAX_REQUEST_SIZE=52428800
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=65

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=msmebazaar-backups