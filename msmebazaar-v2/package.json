{
  "name": "msmebazaar-v2",
  "version": "2.0.0",
  "private": true,
  "description": "A modular platform to onboard MSMEs and match them with buyers, investors, and acquisition opportunities",
  "packageManager": "pnpm@8.0.0",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules/.cache",
    "reset": "rm -rf node_modules apps/*/node_modules libs/*/node_modules && pnpm install",
    "dev:web": "turbo run dev --filter=@msmebazaar/web",
    "dev:api": "cd apps/auth-api && uvicorn main:app --reload --port 8000",
    "build:web": "turbo run build --filter=@msmebazaar/web",
    "start:web": "turbo run start --filter=@msmebazaar/web",
    "test:api": "cd apps/auth-api && pytest",
    "lint:api": "cd apps/auth-api && ruff check .",
    "format:api": "cd apps/auth-api && ruff format .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "db:push": "turbo run db:push --filter=@msmebazaar/db",
    "db:migrate": "turbo run db:migrate --filter=@msmebazaar/db",
    "db:studio": "turbo run db:studio --filter=@msmebazaar/db",
    "deploy": "turbo run build && npm run docker:build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "msme",
    "marketplace",
    "ai-matching",
    "valuation",
    "nextjs",
    "fastapi",
    "microservices",
    "monorepo",
    "pnpm",
    "turbo"
  ],
  "author": "MSMEBazaar Team",
  "license": "MIT"
}